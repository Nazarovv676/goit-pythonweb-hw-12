# .env.example
# Copy this file to .env and customize values for your environment
# DO NOT commit the actual .env file to version control!

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+psycopg2://postgres:mysecretpassword@localhost:5432/contacts_db
DB_ECHO=false

# =============================================================================
# Application
# =============================================================================
APP_NAME=Contacts API
APP_VERSION=2.1.0
DEBUG=false

# =============================================================================
# Security - JWT Access Tokens
# =============================================================================
# IMPORTANT: Change these secrets in production!
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
VERIFICATION_TOKEN_EXPIRE_HOURS=24

# =============================================================================
# Security - Password Reset
# =============================================================================
# Use a DIFFERENT secret from the main SECRET_KEY
PASSWORD_RESET_SECRET=password-reset-secret-change-in-production
PASSWORD_RESET_EXPIRE_MINUTES=30

# =============================================================================
# Redis & Caching
# =============================================================================
REDIS_URL=redis://localhost:6379/0
# User cache TTL in seconds (default: 15 minutes)
USER_CACHE_TTL=900

# =============================================================================
# Rate Limiting
# =============================================================================
ME_RATE_LIMIT=5/minute

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# =============================================================================
# Email (Mailhog for development)
# =============================================================================
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@example.com
MAIL_PORT=1025
MAIL_SERVER=localhost
MAIL_TLS=false
MAIL_SSL=false
MAIL_FROM_NAME=Contacts API

# =============================================================================
# Cloudinary (for avatar uploads)
# =============================================================================
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# PostgreSQL (for docker-compose)
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=mysecretpassword
POSTGRES_DB=contacts_db
